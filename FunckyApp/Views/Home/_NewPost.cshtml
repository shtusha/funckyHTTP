<div class="page-header">
    <h3 data-bind="text:title"></h3>
</div>
    
<form role="form">
    <div class="form-group">
        <label for="message">Message</label>
        <textarea class="form-control" id="message" data-bind="value:message" rows="3"></textarea>
    </div>

    <div class="form-group">
        <label for="preview">Preview</label>
        <textarea class="form-control" id="message" data-bind="value:preview" rows="3"></textarea>
    </div>
    <a href="#" data-bind="click: cancel" class="btn btn-default">Cancel</a>
    <a href="#" data-bind="click: previewPost" class="btn btn-success">Preview</a>
    <a href="#" data-bind="click: addPost" class="btn btn-primary">Submit</a>
</form>

